---
    const { image, browser, version, margin} = Astro.props
---

<div class={`w-80 mx-auto shadow-lg h-96 justify-center flex flex-col gap-3 rounded-xl lg:mx-0 ${margin === 2 && 'xl:mt-12'} ${margin === 3 && 'xl:mt-24'} `}>
    <img class="mx-auto" src={image} alt="">
    <div class="text-center flex flex-col gap-1 ">
        <p class="text-xl text-veryDarkBlue font-semibold">Add to {browser}</p>
        <p class="text-grayishBlue d">Minimum version {version}</p>
    </div>
    <img class="my-5" src="/images/bg-dots.svg" alt="bg-dots">
    <button class="bg-softBlue font-semibold text-white w-max mx-auto py-4 text-lg px-7 rounded-md hover:text-softBlue border-2 transition-colors border-softBlue hover:bg-white">Add & Install Extension</button>
</div>